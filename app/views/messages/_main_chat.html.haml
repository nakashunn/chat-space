.main-chat
  .main-chat__group-info
    .main-chat__group-info__left
      %h2.main-chat__group-info__left__current-group
        =@group.name
      %ul.main-chat__group-info__left__member-list
        Member :
        %li.main-chat__group-info__left__member-list__user
          - @users.each do |user|
            = user.name
    
    .main-chat__group-info__right 
      = link_to "Edit", edit_group_path(params[:group_id]), method: :get  
  .main-chat__message-list
    .messages
      = render @messages
  .main-chat__message-form
    .new_message
      .form
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'text', placeholder: 'type a message'
          .form__mask
            = f.label :image, class: 'input-box__image' do
              = icon('fas', 'image', class: 'icon')
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'button'

